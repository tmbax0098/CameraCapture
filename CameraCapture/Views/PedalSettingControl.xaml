<UserControl x:Class="CameraCapture.Views.PedalSettingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CameraCapture.Views"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200" MinHeight="200" MaxHeight="200" Loaded="onLoad">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Controller Setting" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" FontSize="14" />

        <CheckBox x:Name="cbSaveOnFreeze" Content="Save on freeze live" Grid.Row="1" VerticalAlignment="Center" Foreground="White" />

        <CheckBox x:Name="cbSaveOnSave" Content="Save on press capture" Grid.Row="2" VerticalAlignment="Center" Foreground="White" />

        <Button Name="btnSave" Content="Save" Grid.Row="4" Grid.Column="1" Margin="2" Template="{DynamicResource Button_Rounded}" Click="BtnSave_Click" />

    </Grid>
</UserControl>
